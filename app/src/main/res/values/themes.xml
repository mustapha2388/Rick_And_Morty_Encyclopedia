<resources>
    <!-- Base application theme. -->
    <style name="Theme.Rick_And_Morty_Encyclopedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme">
        <item name="android:background">@color/green</item>
    </style>

    <style name="ToolbarTextTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="BottomNavigationView" parent="@style/Widget.Design.BottomNavigationView">
        <item name="android:background">@color/green</item>
        <item name="itemIconTint">@color/bnv_tab_item_foreground</item>
        <item name="itemTextColor">@color/bnv_tab_item_foreground</item>
        <item name="itemIconSize">@dimen/itemIconSize</item>
    </style>
</resources>